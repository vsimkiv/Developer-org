<aura:component controller="BusRouteController"
                implements="flexipage:availableForAllPageTypes,force:appHostable" 
                access="global">
    <!--attributes-->
    <aura:attribute name="routes" 
                    type="Bus_Route__c[]"/>
    <aura:attribute name="columns"
                    type="List"/>
    
    <!-- handlers-->
    <aura:handler name="init" 
                  value="{! this }" 
                  action="{! c.fetchRoutes }"/>
    
    <!-- markup --> 
    <div class="slds-page-header" 
         role="banner">
        <div class="slds-grid">
            <div class="slds-col 
                        slds-has-flexi-truncate">
                <h1 class="slds-page-header__title 
                           slds-truncate">BUS ROUTES</h1>
            </div>
        </div>
    </div>
    
    <div class="datatable-container">
        <lightning:datatable columns="{! v.columns }"
                             data="{! v.routes }"
                             hideCheckboxColumn="false"
                             keyField="id"/>
    </div>
    
</aura:component>